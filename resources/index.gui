      gradient-type="linear"
      gradient-x1="0" gradient-y1="25%"
      gradient-x2="0" gradient-y2="75%"
      gradient-color1="#ebd197"
      gradient-color2="#ebd197"
                  />
    
    <image x="5" y="5" width="30" height="30" href="battery.png"/>
    <text id="battery-label" class="battery-label" x="40" y="30">####</text>
