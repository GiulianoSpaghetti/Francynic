    <rect id="clock-face" x="0" y="40" width="300" height="260" visibility="hidden"/>
    
    <text id="time-label" class="time-label" x="50%" y="60%">##:##</text>
    <text id="steps-label" class="steps-label" x="30%" y="85%">####</text>
    <text id="heart-label" class="heart-label" x="65%" y="85%">♥︎</text>
    <text id="hr-label" class="hr-label" x="95%" y="85%">###</text>
